/* 附近的蓝牙设备 */
.sb-btit{
	height: 110rpx;
	line-height: 110rpx;
	font-size: 40rpx;
	font-weight: 400;
	text-align: center;
}


.sb-box{
	border-top: 1px solid #e5e5e6;
}

.sb-item{
	padding: 0 30rpx;
	display: flex;
	align-items: center;
	height: 108rpx;
	border-bottom: 1px solid #e5e5e6;
}


/*  输入密码  */
.page2{
  position: absolute;
  z-index: 2;
}
.shade-box1{
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	z-index: 3;
	background: rgba(0,0,0,0.7);
	padding-top: 100rpx;
	color: #fff;
}
.enter-hint{
  margin-bottom: 20rpx;
}

.pwd-box{
	text-align: center;
  height: 40rpx;
}
.pwd-item{
	width: 30rpx;
	height: 30rpx;
	background: #fff;
	border-radius: 50%;
	margin: 0 20rpx;
	display: inline-block;
}

.numeric-keyboard{
	display: flex;
	flex-wrap: wrap;
	padding: 50rpx 0 50rpx 100rpx;
	justify-content: space-around;
}

.numeric-item{
	width: 130rpx;
	height: 130rpx;
	color: #fff;
	border: 1px solid #fff;
	box-sizing: border-box;
	border-radius: 50%;
	margin-right: 80rpx;
	justify-content: center;
	align-items: center;
	margin-bottom: 50rpx;
	font-size: 44rpx;
  transition: all 0.3s;
}
.bg_blue{
	color: #3398ff;
	border: 1px solid #3398ff;
	background: #fff;
}

/* 取消 / 删除 */
.handle-box{
	display: flex;
	flex-direction: row-reverse;
	padding: 0 100rpx;
}